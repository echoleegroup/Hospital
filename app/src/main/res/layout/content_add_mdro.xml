                <TextView
                    android:id="@+id/TextView19"
                    android:text="單位工作人員"
                    android:textStyle="bold"
                    android:padding="18dip"
                    android:gravity="right"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/EditText3"
                    android:textSize="18dp"/>

