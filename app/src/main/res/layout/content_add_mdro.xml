                    <RadioButton
                        android:id="@+id/RadioButton31"
                        android:text="Y"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:checked="true"
                        android:textSize="18dp"/>

                    <RadioButton
                        android:id="@+id/RadioButton32"
                        android:text="N"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="18dp"/>

                    <RadioButton
                        android:id="@+id/RadioButton33"
                        android:text="NA"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
